= form_for @tutorial do |f|
  - if @tutorial.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tutorial.errors.count, "error")} prohibited this tutorial from being saved:"
      %ul
        - @tutorial.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :product
    = f.text_field :product
  .field
    = f.label :version
    = f.text_field :version
  .field
    = f.label :date_published
    = f.datetime_select :date_published
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :rating
    = f.number_field :rating
  .field
    = f.label :likes
    = f.number_field :likes
  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :html
    = f.text_area :html
  .actions
    = f.submit 'Save'
