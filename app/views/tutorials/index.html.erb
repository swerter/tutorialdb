<h1>Listing tutorials</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Product</th>
      <th>Version</th>
      <th>Date published</th>
      <th>Author</th>
      <th>Rating</th>
      <th>Likes</th>
      <th>Summary</th>
      <th>Html</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= tutorial.title %></td>
        <td><%= tutorial.product %></td>
        <td><%= tutorial.version %></td>
        <td><%= tutorial.date_published %></td>
        <td><%= tutorial.author %></td>
        <td><%= tutorial.rating %></td>
        <td><%= tutorial.likes %></td>
        <td><%= tutorial.summary %></td>
        <td><%= tutorial.html %></td>
        <td><%= link_to 'Show', tutorial %></td>
        <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
        <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tutorial', new_tutorial_path %>
